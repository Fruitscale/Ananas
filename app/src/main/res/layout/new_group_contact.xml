<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:elevation="1dp"
    android:layout_marginLeft="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginEnd="16dp">
    <android.support.constraint.ConstraintLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/new_group_contact_imageView_container">
        <!-- Group picture -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/new_group_contact_imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_person_black_48dp"
            app:civ_border_width="0dp"
            app:civ_fill_color="@color/colorAccent"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Group picture -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/new_group_contact_checked_imageView"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_check_black_18dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@android:color/white"
            app:civ_fill_color="@color/colorPrimary"
            tools:ignore="ContentDescription"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp"
            android:visibility="visible"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/new_group_contact_textView"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:text="Barry the Bee"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@+id/new_group_contact_imageView_container"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />
</android.support.constraint.ConstraintLayout>