<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/round_contact_background"
    android:layout_marginStart="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:elevation="1dp">
    <!-- Group picture -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/selected_contact_imageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_person_black_48dp"
        app:civ_border_width="0dp"
        app:civ_fill_color="@color/colorPrimary"
        tools:ignore="ContentDescription"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/selected_contant_textView"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:gravity="center"
        android:text="@string/contact"
        app:layout_constraintLeft_toRightOf="@+id/selected_contact_imageView"
        android:textSize="16sp"
        android:paddingLeft="8dp"
        android:paddingStart="8dp"
        android:paddingRight="16dp"
        android:paddingEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>